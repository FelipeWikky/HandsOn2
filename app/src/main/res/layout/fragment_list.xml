<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.prontuario.ListFragment">

    <Button
        android:id="@+id/btnLiberado"
        android:layout_width="100dp"
        android:layout_marginLeft="28dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape"
        android:text="Liberado" />

    <Button
        android:id="@+id/btnQuarentena"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btnLiberado"
        android:background="@drawable/buttonshape"
        android:text="Quarentena" />

    <Button
        android:id="@+id/btnInternado"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btnQuarentena"
        android:background="@drawable/buttonshape"
        android:text="Internado" />

    <TextView
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:id="@+id/txtTitleList"
        android:layout_below="@id/btnQuarentena"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/textNotFoundProntuario" />

    <ListView
        android:id="@+id/lstProntuarios"
        android:layout_below="@+id/txtTitleList"

        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </ListView>


</RelativeLayout>